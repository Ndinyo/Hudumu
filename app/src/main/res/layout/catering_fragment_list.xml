<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardViewCatering"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardViewCatering:cardUseCompatPadding="true"
    cardViewCatering:cardCornerRadius="4dp"
    cardViewCatering:cardElevation="4dp"
    xmlns:cardViewCatering="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewCatering"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true" android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewCateringDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewCatering"
            android:layout_alignLeft="@id/imageViewCatering"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewCateringPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCateringDetail"
            android:layout_alignLeft="@id/textViewCateringDetail"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>