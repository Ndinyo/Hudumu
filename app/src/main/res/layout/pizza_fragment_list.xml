<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardViewPizza"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardViewPizza:cardUseCompatPadding="true"
    cardViewPizza:cardCornerRadius="4dp"
    cardViewPizza:cardElevation="4dp"
    xmlns:cardViewPizza="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewPizza"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/textViewPizzaType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewPizza"
            android:layout_alignLeft="@id/imageViewPizza"
            android:textColor="@android:color/holo_green_dark"
            android:layout_margin="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPizzaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPizzaType"
            android:layout_alignLeft="@id/textViewPizzaType"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPizzaPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPizzaSize"
            android:layout_alignLeft="@id/textViewPizzaSize"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>