<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardViewMarket"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardViewMarket:cardUseCompatPadding="true"
    cardViewMarket:cardCornerRadius="4dp"
    cardViewMarket:cardElevation="4dp"
    xmlns:cardViewMarket="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewMarket"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textViewMarketDetail"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMarketPrice"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/textViewMarketDetail"
            android:layout_below="@id/textViewMarketDetail"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <!--<Button
            android:layout_width="130dp"
            android:id="@+id/add_to_cart"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textViewMarketPrice"
            android:layout_below="@id/textViewMarketPrice"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/add_cart" />-->
    </RelativeLayout>

</android.support.v7.widget.CardView>